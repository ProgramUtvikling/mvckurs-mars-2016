@model IEnumerable<MovieDAL.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3>@ViewBag.GenreName</h3>
<ul>
    @foreach (var movie in Model.OrderBy(m => m.Title))
    {
        <li>
            @Html.ActionLink(movie.Title, "Details", new { id=movie.MovieId })
        </li>
    }
</ul>


